<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="/index.css">
	<title><%= title %></title>
</head>
<body>
	<h1>Data pengguna</h1>
	<a href="/add-user" class="add-user-btn">Tambah user</a>
	<div class="container">
	<table id="users">
	  <tr>
	    <th>Nama</th>
	    <th>Tempat Lahir</th>
	    <th>Tanggal Lahir</th>
	    <th>Alamat</th>
	    <th>Aksi</th>
	  </tr>
	    <% users.forEach(user => { %>
	    <% const {nama, alamat, "tempat-lahir" : ttl, "tanggal-lahir" : tglLahir} = user %>
	  <tr>
	      <td><%= nama %></td>
	      <td><%= ttl %></td>
	      <td><%= tglLahir %></td>
	      <td><%= alamat %></td>
	      <td>
	      	<a href="/detail-user?nama=<%= nama %>&tempat-lahir=<%= ttl %>&tanggal-lahir=<%= tglLahir %>&alamat=<%= alamat %>" class="detail-user-btn">Detail</a></td>
	  </tr>
	    <% })%>
	    <% if(users.length < 1) { %>
	  <tr>
	  	<td colspan="5" style="text-align: center;">data masih kosong ...</td>
	  </tr>
	    <% } %>
	</table>
	</div>
</body>
</html>